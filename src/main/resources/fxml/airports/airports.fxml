                        <Image url="@../../icons/edit.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button fx:id="deleteButton" layoutX="191.0" layoutY="8.0" mnemonicParsing="false" onAction="#delete" styleClass="icon" textFill="WHITE">
